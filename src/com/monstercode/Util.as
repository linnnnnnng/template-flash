package com.monstercode {		public class Util {		//Random sort array - array.sort(randomSort)		public static function randomSort(elementA:Object, elementB:Object):Number {			var sortNum : int = Math.round(Math.random() * 2) - 1;			return sortNum;		}				public static function isEven(num) {			return !(num%2);		}				public static function randomBoolean():Boolean {			return Boolean( Math.round(Math.random()) );		}				public static function getTimeStampFormat() {			var currentDate:Date = new Date();			return currentDate.valueOf()		}				public static function getDate() {			var currentDate:Date = new Date();			return convertASDateToSQLDateTime(currentDate)		}				public static function convertASDateToSQLDateTime(date:Date):String {			// month processing			var month:String = date.month;			month=enforceLeadingZero(Number(month)+1);			// day processing			var day:String = enforceLeadingZero(date.date);			// hour processing			var hours:String = enforceLeadingZero(date.hours);			// minutes processing 			var minutes:String = enforceLeadingZero(date.minutes);			// seconds processing 			var seconds:String = enforceLeadingZero(date.seconds);			//mileseconds processing			var milseconds:String = enforceLeadingZero(date.milliseconds);			//timezone processing			var timezone:String = enforceLeadingZero(date.timezoneOffset);			//return date.fullYear + "-" + month + "-" + day + "T" + hours + ":" + minutes + ":" + seconds;			return date.fullYear + "-" + month + "-" + day + "T" + hours + ":" + minutes + ":" + seconds;		}				public static function enforceLeadingZero(i:int):String {			if (i.toString().length < 2) {				return "0" + i;			}			else 			{				return i.toString();			}		}				public static function removeTabsAndNewLines($str:String):String {			var rex:RegExp = /(\t|\n)/gi;			$str = $str.replace(rex,'');			return $str;		}	}}